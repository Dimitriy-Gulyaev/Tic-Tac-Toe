<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Options">

    <TextView
        android:id="@+id/textFieldSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Field size:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/seekBarFieldSize"
        app:layout_constraintStart_toStartOf="@+id/seekBarFieldSize" />

    <SeekBar
        android:id="@+id/seekBarFieldSize"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:max="12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textFieldsToWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fields to win:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/seekBarFieldsToWin"
        app:layout_constraintStart_toStartOf="@+id/seekBarFieldsToWin" />

    <SeekBar
        android:id="@+id/seekBarFieldsToWin"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:max="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarFieldSize" />

    <TextView
        android:id="@+id/gameOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Options"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/seekBarFieldSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>